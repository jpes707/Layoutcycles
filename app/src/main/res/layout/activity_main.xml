<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/onCreateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onCreate: 0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onStartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onStart: 0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onResumeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onResume: 0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onPauseView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onPause: 0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onStopView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onStop: 0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onRestartView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onRestart: 0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onDestroyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="onDestroy: 0"
            android:textSize="30sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>